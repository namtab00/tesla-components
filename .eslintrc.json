{
    "env": {
        "browser": true,
        "es2021": true
    },
    "plugins": [
        "lit-a11y",
        "@typescript-eslint",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "extends": [
        "plugin:prettier/recommended",
        "plugin:lit-a11y/recommended"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "comma-dangle": [
            "error",
            "never"
        ]
    }
}
